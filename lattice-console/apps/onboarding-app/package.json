{
  "name": "@lattice-console/onboarding-app",
  "version": "0.1.0",
  "private": true,
  "description": "Lattice Console Onboarding Desktop App - Cross-Platform Docker Agent Setup",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "tauri": "tauri",
    "build:desktop": "pnpm tauri build",
    "build:all": "pnpm tauri build --target universal-apple-darwin && pnpm tauri build --target x86_64-pc-windows-msvc && pnpm tauri build --target x86_64-unknown-linux-gnu",
    "dist": "pnpm build:all && node scripts/package-distributables.js"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@tauri-apps/plugin-shell": "^1.0.0",
    "@tauri-apps/plugin-dialog": "^1.0.0",
    "@tauri-apps/plugin-fs": "^1.0.0",
    "@tauri-apps/plugin-process": "^1.0.0",
    "@tauri-apps/plugin-notification": "^1.0.0",
    "@tauri-apps/plugin-updater": "^1.0.0",
    "svelte": "^4.2.8",
    "vite": "^5.0.8",
    "lucide-svelte": "^0.344.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "axios": "^1.6.7",
    "zod": "^3.22.4",
    "@tailwindcss/forms": "^0.5.7"
  },
  "devDependencies": {
    "@svelte/vite-plugin-svelte": "^3.0.1",
    "@tauri-apps/cli": "^1.5.10",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.11.0",
    "svelte-check": "^3.6.2",
    "typescript": "^5.3.3",
    "svelte-preprocess": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}