# Database
DATABASE_URL=postgresql://user:password@host:5432/lattice_console?sslmode=require

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Backend Server
BACKEND_PORT=3001
BACKEND_HOST=localhost

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Agent Configuration
AGENT_PORT=3002
AGENT_HOST=localhost
AGENT_SECRET=shared-secret-between-backend-and-agent

# Tunneling (ngrok)
NGROK_AUTH_TOKEN=your-ngrok-auth-token
NGROK_REGION=us

# Alternative Tunneling (localtunnel)
LOCALTUNNEL_SUBDOMAIN=lattice

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_VOLUME_BASE_PATH=/var/lib/lattice/volumes

# Security
CORS_ORIGIN=http://localhost:3000
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# MinIO Default Config
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# PostgreSQL Default Config
POSTGRES_DEFAULT_USER=postgres
POSTGRES_DEFAULT_DB=postgres

# Node Environment
NODE_ENV=development